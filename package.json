{
  "author": "Ostap Chervak <ostap.chervak@strikersoft.com>",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Strikersoft/poa.git"
  },
  "scripts": {
    "bootstrap": "yarn clean:all && yarn && lerna bootstrap",
    "clean": "lerna run clean",
    "clean:all": "lerna clean --yes && yarn clean",
    "publish": "yarn build umd && lerna publish --silent --registry=https://registry.npmjs.org/",
    "publish:canary":
      "yarn build umd && lerna publish --npm-tag=canary --silent --registry=https://registry.npmjs.org/",
    "publish:latest": "yarn run publish",
    "build": "yarn run clean && node scripts/build",
    "start": "npm run bootstrap && npm-run-all --parallel start:core start:router start:state",
    "start:core": "cd packages/poa-core && yarn watch",
    "start:router": "cd packages/poa-router && yarn watch",
    "start:state": "cd packages/poa-state && yarn watch",
    "test": "node scripts/test",
    "test-ci": "yarn run typecheck && yarn run test -- --coverage && codecov"
  },
  "workspaces": ["packages/*", "examples/*"],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "devDependencies": {
    "lerna": "^2.7.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2"
  }
}
