  "repository": {
    "type": "git",
    "url": "https://github.com/Strikersoft/poa.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test",
    "start": "run-p start:core start:i18n start:router start:satcheljs start:state",
    "start:core": "cd packages/poa-core && yarn watch",
    "start:i18n": "cd packages/poa-i18n && yarn watch",
    "start:router": "cd packages/poa-router && yarn watch",
    "start:satcheljs": "cd packages/poa-satcheljs && yarn watch",
    "start:state": "cd packages/poa-state && yarn watch",
    "prepare": "lerna run prepare"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/node": "10.3.0",
    "lerna": "2.11.0",
    "prettier": "1.13.4",
    "typescript": "2.9.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "npm-run-all": "^4.1.3"
  }
