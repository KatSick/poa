{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es6", "es2016.array.include"],
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "experimentalDecorators": false
  },
  "exclude": [
    "src/*.spec.ts",
    "core",
    "i18n",
    "router",
    "satcheljs",
    "state",
    "utils",
    "node_modules",
    "examples"
  ]
}
